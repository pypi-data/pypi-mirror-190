#!/usr/bin/env python3
# This file is placed in the Public Domain.


import os
import readline
import sys
import termios
import time
import traceback


sys.path.insert(0, os.getcwd())


from opb import Command, Default, Handler, Parsed, Storage
from opb import launch, privileges, scan, update, wait


from opb.modules import cmd, fnd, irc, log, rss


Cfg = Default()


Storage.workdir = "/var/lib/opb/"


scan(cmd)
scan(fnd)
scan(irc)
scan(log)
scan(rss)


class CLI(Handler):


    def announce(self, txt):
        pass

    def raw(self, txt):
        print(txt)
        sys.stdout.flush()


def main():
    privileges(Cfg.name)
    p = Parsed()
    p.parse(" ".join(sys.argv[1:]))
    update(Cfg, p)
    e = Command()
    e.type = "command"
    e.txt = Cfg.otxt
    e.parse(e.txt)
    cli = CLI()
    cli.start()
    cli.put(e)
    e.wait()


main()
