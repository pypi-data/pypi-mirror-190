<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="report_vh_invoicing_order_item">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-set="lang" t-value="o.partner_id.lang"/>
            <t t-call="vh_invoicing.report_vh_invoicing_order_item_document" t-lang="lang"/>
          </t>
        </t>
    </template>
    <template id="report_vh_invoicing_order_item_document">
      <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context(lang=lang)" />
        <t t-set="address">
          <address  t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
          <div t-if="o.partner_id.vat" style="margin-top:-10px;">
            <t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/>
          </div>
        </t>
        <div class="page">
          <h2 style="margin-top:10px 0 10px;font-size:24px;">Receipt of assigment of use of the house</h2>

          <div id="informations" class="row mt32 mb32">
            <div class="col-auto col-3 mw-100 mb-2" name="document_date">
              <strong>Date:</strong>
              <p class="m-0" t-field="o.create_date" t-options='{"widget": "date", "format": "dd/MM/Y"}'/>
            </div>
            <div class="col-auto col-3 mw-100 mb-2" name="period">
              <strong>Period:</strong>
              <p class="m-0" t-field="o.period"/>
            </div>
            <div class="col-auto col-3 mw-100 mb-2" name="period">
              <strong>Reference:</strong>
              <p class="m-0" t-field="o.report_ref"/>
            </div>
          </div>

          <table style="font-size:12px; margin-top:-20px;" class="table table-sm o_main_table" name="invoice_line_table">
            <thead>
              <tr>
                <th name="th_description" class="text-left">
                  <span>Description</span>
                </th>
                <th name="th_quantity" class="text-right">
                  <span>Quantity</span>
                </th>
                <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                  <span>Unit Price</span>
                </th>
                <th name="th_subtotal" t-attf-class="text-right">
                  <span>Subtotal</span>
                </th>
                <th name="th_taxes" t-attf-class="text-right">
                  <span>Taxes</span>
                </th>
                <th name="th_total" class="text-right">
                  <span>Total Price</span>
                </th>
              </tr>
            </thead>
            <tbody class="invoice_tbody">
              <t t-set="current_subtotal" t-value="0"/>
              <t t-set="lines" t-value="o.receipt_line_ids"/>

              <t t-foreach="lines" t-as="line">
                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"/>

                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                  <t t-if="not line.display_type" name="account_invoice_line_accountable">
                    <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                    <td class="text-right">
                      <span t-field="line.quantity"/>
                      <span t-field="line.uom_id"/>
                    </td>
                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                      <span class="text-nowrap" t-field="line.price_unit"/>
                    </td>
                    <td class="text-right o_price_total">
                      <span t-field="line.price_subtotal"/>
                    </td>
                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                      <span t-esc="', '.join(map(lambda x: (x.name), line.invoice_line_tax_ids))" id="line_tax_ids"/>
                    </td>
                    <td class="text-right o_price_total">
                      <span t-field="line.price_total"/>
                    </td>
                  </t>
                  <t t-if="line.display_type == 'line_section'">
                    <td colspan="99">
                      <span t-field="line.name" t-options="{'widget': 'text'}"/>
                    </td>
                    <t t-set="current_section" t-value="line"/>
                    <t t-set="current_subtotal" t-value="0"/>
                  </t>
                  <t t-if="line.display_type == 'line_note'">
                    <td colspan="99">
                      <span t-field="line.name" t-options="{'widget': 'text'}"/>
                    </td>
                  </t>
                </tr>
              </t>
            </tbody>
          </table>
          <!-- Document Totals -->
          <div class="clearfix">
            <div id="total" class="row">
                <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                    <table class="table table-sm" style="page-break-inside: avoid;">
                        <tr class="border-black o_subtotal" style="">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                              <span t-field="o.receipt_total_untaxed_invoiced" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr class="border-black o_subtotal" style="">
                            <td><strong>Taxes</strong></td>
                            <td class="text-right">
                              <span t-field="o.receipt_total_taxes" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr class="border-black o_total">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                              <span t-field="o.receipt_total_invoiced" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
          </div>
          <!-- Doc Info -->
          <div class="clearfix" style="font-size:14px;margin-top:10px;" >
            <p t-if="o.comment">
              <strong>Terms and Conditions:</strong>
              <span t-field="o.comment"/>
            </p>
            <p t-if="o.payment_mode_id.note">
              <strong>Payment Mode:</strong>
              <span t-field="o.payment_mode_id.note"/>
            </p>
            <p>
              <strong>Bank Account:</strong>
              <span t-esc="'*' * (len(o.partner_bank_id.acc_number) - o.payment_mode_id.show_bank_account_chars) + o.partner_bank_id.acc_number[-o.payment_mode_id.show_bank_account_chars:]"/>
            </p>
          </div>
        </div>
        <p style="page-break-after:always;"/>
      </t>
      <t t-foreach="o.receipt_invoice_ids" t-as="invoice">
        <h1 t-field="invoice.name" />
        <t t-call="account.report_invoice_document">
          <t t-set="o" t-value="invoice"/>
        </t>
        <p style="page-break-after:always;"/>
      </t>
    </template>
    <report
        id="vh_invoicing_order_item_report"
        model="vh.invoicing.order.item"
        string="Vh Receipt Report"
        name="vh_invoicing.report_vh_invoicing_order_item"
        file="vh_invoicing.vh_invoicing_order_item_report"
        report_type="qweb-pdf"/>
  </data>
</odoo>