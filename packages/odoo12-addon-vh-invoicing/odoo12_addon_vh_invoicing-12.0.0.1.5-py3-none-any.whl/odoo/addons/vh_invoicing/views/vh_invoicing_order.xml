<odoo>
  <data>

    <record id="view_vh_invoicing_order_window" model="ir.actions.act_window">
      <field name="name">Invoicing orders</field>
      <field name="res_model">vh.invoicing.order</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_vh_invoicing_order_tree" model="ir.ui.view">
      <field name="name">vh.invoicing.order.tree</field>
      <field name="model">vh.invoicing.order</field>
      <field name="arch" type="xml">
        <tree>
          <field name="status"/>
          <field name="name"/>
          <field name="total_invoiced"/>
        </tree>
      </field>
    </record>

    <record id="view_vh_invoicing_order_form" model="ir.ui.view">
      <field name="name">vh.invoicing.order.form</field>
      <field name="model">vh.invoicing.order</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="collect_invoices_workflow_action" type="object"
              string="Collect invoices"
              attrs="{'invisible': [('status','!=','new')]}"/>

            <button name="validate_invoices_workflow_action" type="object"
              string="Validate invoices"
              attrs="{'invisible': [('status','!=','invoices_collected')]}"/>

            <button name="send_invoices_workflow_action" type="object"
              string="Send invoices"
              attrs="{'invisible': [('status','!=','invoices_validated')]}"/>

            <button name="create_payment_order_workflow_action" type="object"
              string="Create payment order"
              attrs="{'invisible': [('status','!=','invoices_sent')]}"/>

            <field name="status" widget="statusbar"/>

          </header>
          <sheet>
            <notebook>
              <page string="General">
                <group>
                  <field name="name" readonly="True" attrs="{'invisible': [('status', '=', 'new')]}"/>
                  <field name="total_invoiced"/>
                  <field name="contact_group_id" required="True" attrs="{'readonly': [('status', '!=', 'new')]}"/>
                  <field name="account_journal_mids" required="True" domain="[('is_vh_journal','=',True)]" attrs="{'readonly': [('status', '!=', 'new')]}"/>
                </group>
              </page>
              <page string="Items" attrs="{'invisible': [('status', '=', 'new')]}">
                <group>
                  <field name="order_item_ids" readonly="True" widget="one2many_list" create="false" edit="false" open="false"/>
                </group>
              </page>
              <page string="Invoices" attrs="{'invisible': [('status', '=', 'new')]}">
                <group>
                  <field name="invoice_ids" readonly="True" widget="one2many_list" create="false" edit="false" open="false"/>
                </group>
              </page>
              <page string="Payment" attrs="{'invisible': [('status', '!=', 'completed')]}">
                <group>
                  <field name="payment_order_id" readonly="True"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Invoicing orders" id="vh.invoicing_order_menu" 
      parent="vh.menu_root" action="view_vh_invoicing_order_window" sequence="3"/>
  </data>
</odoo>