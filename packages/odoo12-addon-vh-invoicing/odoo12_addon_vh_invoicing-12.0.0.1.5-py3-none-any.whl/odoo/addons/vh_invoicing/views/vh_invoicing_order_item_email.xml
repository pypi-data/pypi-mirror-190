<odoo>
  <data noupdate="1">
    <record id="email_template_invoicing_order_item" model="mail.template">
      <field name="name">email_tmpl_invoicing_order_item</field>
      <field name="email_from">${object.company_id.email |safe}</field>
      <field name="email_to">${object.partner_id.email | safe}</field>
      <!-- <field name="subject">${object.company_id.name} Cobrament (Ref ${object.number or 'n/a'})</field> -->
      <field name="subject">${object.company_id.name}: Factures i Rebut mensuals.</field>
      <field name="model_id" ref="vh_invoicing.model_vh_invoicing_order_item"/>
      <field name="auto_delete" eval="False"/>
      <field name="lang">${object.partner_id.lang}</field>
      <field name="body_html"><![CDATA[
<div style=" ">
  <p style=" margin:0px 0px 9px 0px">Estimada ${object.partner_id.name},</p>
  <p style=" margin:0px 0px 9px 0px">Us enviem les factures i rebut mensuals amb referències:<p>
  <ul>
    % for row in object.invoice_ids:
      <li>Ref: <strong style="font-weight:bold">${row.number}</strong> Total: <strong style="font-weight:bold">${row.amount_total} €</strong></li>
    % endfor
  </ul>
  <p style=" margin:0px 0px 9px 0px">
    La quantitat total és de&nbsp;<strong style="font-weight:bold">${"%.2f" % object.total_invoiced} €</strong>.
  </p>
  <br><br>
  <p style=" margin:0px 0px 9px 0px">Moltes gràcies.</p>
</div>
      ]]></field>
    </record>

  </data>
</odoo>